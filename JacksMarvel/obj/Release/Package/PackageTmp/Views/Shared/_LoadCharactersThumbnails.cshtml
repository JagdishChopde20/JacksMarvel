@model IEnumerable<JacksMarvel.Models.ComicCharacter>

@foreach (var item in Model)
{
    if (item.id != null && item.name != null)
    {
<div class="col-4 col-sm-4 col-md-4 col-lg-3 col-xl-2">
    <a href="@Url.Action("CharacterDetails","ComicHeros",new { charId = item.id })">
        <img src="@item.image.url" class="img-fluid img-thumbnail" />
    </a>
    <h6 class="text-uppercase font-weight-light text-center">@item.name</h6>
    @if (ViewData["FromUserFavouriteCharacters"] != null)
    {
        using (Html.BeginForm("RemoveFromFavourite", "ComicHeros", FormMethod.Post))
        {
            <input type="hidden" name="charId" value="@item.id" />
            <button type="submit" class="btn btn-outline-danger btn-sm btn-block">Remove</button>

        }
    }
    &nbsp;
</div>
    }
}